 <form class = "container" id ="container" method="POST" action="/store">
    <h1> ADD ACCOUNT</h1>

    <div class="create-container">
        <div class="create-form">
            <div class="info">
                <span>Username</span> 
                <input class="text" type="text" placeholder="Username" name="username" required> 
                <span>Full Name<span> 
                <input class="text" type="text" placeholder="Full Name" name="name"> 
                <span>D.O.B<span> 
                <input class="text" type="date" placeholder="Date of birth" name="dob"> 
                <span>Gender</span> 
                <input class="text" type="text" placeholder="Gender" name="gender"> 
                <span>Class</span> 
                <input class="text" type="text" placeholder="Class" name="class"> 
                <span>Role</span> 
                <input class="text" type="text" placeholder="Role" name="role" required> 
                <span>Password</span> 
                <input class="text" type="password" placeholder="Password" name="password" required> 
            </div>
            {{!-- <img class = "avatar-img" id="avatar-img" src="image/avatar.png"> --}}
        </div>
        
    </div>
    <div class="btn-add"> 
        <button id= "btn-add">Add</button>
    </div>
</div>
