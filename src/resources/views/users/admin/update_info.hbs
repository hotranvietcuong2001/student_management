<table id="example" class="table table-striped table-bordered" style="width:100%">
    <thead>
        <tr>
            <th scope="col">Username</th>
            <th scope="col">Full Name</th>
            <th scope="col">DOB</th>
            <th scope="col">Gender</th>
            <th scope="col">Class</th>
            <th scope="col">Role</th>
            <th scope="col">Action</th>
            <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody>
        {{#each users}}
        <tr>
            <td>{{this.username}}</td>
            <td>{{this.name}}</td>
            <td>{{this.dob}}</td>
            <td>{{this.gender}}</td>
            <td>{{this.class}}</td>
            <td>{{this.role}}</td>
            <td><a href="./{{this._id}}/edit" class="btn btn-link" >Edit</a></td>
            <td><a href="" class="btn btn-link" data-toggle="modal"  data-id="{{this._id}}"data-target="#delete-modal">Delete</a></td>
        </tr>
        {{/each}}
    </tbody>
</table>



<!-- Modal -->
<div class="modal fade" id="delete-modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Confirm Delete</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
          Are you sure you want to delete this account?
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
        <button id="btn-delete" type="button" class="btn btn-primary">Delete</button>
      </div>
    </div>
  </div>
</div>

<form name="delete-form" method="POST">

</form>


<script>
  document.addEventListener('DOMContentLoaded', function() {
    var userId;
    var deleteForm = document.forms['delete-form'];
    $('#delete-modal').on('show.bs.modal', function (event) {

      var button = $(event.relatedTarget);
      userId = button.data('id');
      });
    
          
    var btnDelete = document.getElementById('btn-delete');
    btnDelete.onclick = function() {
      deleteForm.action = userId + '?_method=DELETE';
      deleteForm.submit();
    }
  })
</script>